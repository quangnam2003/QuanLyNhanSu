<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.MainController"
            styleClass="root"
            stylesheets="@sidebar.css">

    <!-- Sidebar trái -->
    <left>
        <VBox fx:id="sidebar"
              prefWidth="220"
              spacing="0"
              alignment="TOP_CENTER"
              styleClass="sidebar">

            <!-- Logo + Slogan -->
            <VBox alignment="CENTER" spacing="5" styleClass="logo-section">
                <Label text="HR SYSTEM" styleClass="logo-title" />
                <Label text="Quản lý nhân sự hiện đại" styleClass="logo-subtitle" />
            </VBox>

            <!-- Menu -->
            <VBox spacing="0" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardBtn" text="Dashboard" onAction="#handleMenu" styleClass="nav-button,active"/>
                <Button fx:id="employeeBtn" text="Nhân viên" onAction="#handleMenu" styleClass="nav-button"/>
                <Button fx:id="organizationBtn" text="Tổ chức" onAction="#handleMenu" styleClass="nav-button"/>
                <Button fx:id="contractBtn" text="Hợp đồng" onAction="#handleMenu" styleClass="nav-button"/>
                <Button fx:id="reportBtn" text="Tài Liệu" onAction="#handleMenu" styleClass="nav-button"/>
                <Button fx:id="settingsBtn" text="Quản Lý" onAction="#handleMenu" styleClass="nav-button"/>
            </VBox>

            <!-- Logout Button (đẹp + cách nút trên) -->
            <VBox alignment="CENTER">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <Button id="btnLogout"
                        fx:id="btnLogout"
                        text="Đăng xuất"
                        onAction="#handleLogout"
                        prefWidth="160"
                        style="-fx-background-color: #d9534f;
                       -fx-text-fill: white;
                       -fx-background-radius: 8;" />
            </VBox>
        </VBox>
    </left>

    <!-- Nội dung chính -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area" />
    </center>

</BorderPane>
