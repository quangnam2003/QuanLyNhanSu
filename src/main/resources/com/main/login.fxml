<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.LoginController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" prefWidth="300" prefHeight="200" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50">
        <Label text="Đăng nhập hệ thống" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Tên đăng nhập" />
        <PasswordField fx:id="passwordField" promptText="Mật khẩu" />
        <Button text="Đăng nhập" onAction="#handleLogin" />
        <Label fx:id="errorLabel" textFill="red" />
    </VBox>

</AnchorPane>
