<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fitToWidth="true"
            fitToHeight="true"
            stylesheets="@sidebar.css">

    <VBox styleClass="page-container" spacing="20">
        
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Cơ cấu Tổ chức" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+ Thêm phòng ban" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        </HBox>

        <!-- Organization Chart -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Sơ đồ tổ chức" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            
            <!-- CEO Level -->
            <VBox alignment="CENTER" spacing="20">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 15 25; -fx-background-radius: 8;">
                    <Label text="Ban Giám Đốc" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Nguyễn Văn A - Giám Đốc" style="-fx-font-size: 12px; -fx-text-fill: #ecf0f1;"/>
                </VBox>
                
                <!-- Department Level -->
                <HBox spacing="20" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #27ae60; -fx-padding: 15 20; -fx-background-radius: 8;">
                        <Label text="Phòng Nhân sự" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="15 nhân viên" style="-fx-font-size: 12px; -fx-text-fill: #d5f4e6;"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #e74c3c; -fx-padding: 15 20; -fx-background-radius: 8;">
                        <Label text="Phòng Tài chính" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="12 nhân viên" style="-fx-font-size: 12px; -fx-text-fill: #fadbd8;"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f39c12; -fx-padding: 15 20; -fx-background-radius: 8;">
                        <Label text="Phòng IT" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="20 nhân viên" style="-fx-font-size: 12px; -fx-text-fill: #fdeaa7;"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #9b59b6; -fx-padding: 15 20; -fx-background-radius: 8;">
                        <Label text="Phòng Marketing" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                        <Label text="18 nhân viên" style="-fx-font-size: 12px; -fx-text-fill: #e8daef;"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>

        <!-- Department Details -->
        <HBox spacing="20">
            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label text="Danh sách phòng ban" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                
                <TableView style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8;">
                    <columns>
                        <TableColumn text="Mã phòng ban" prefWidth="120"/>
                        <TableColumn text="Tên phòng ban" prefWidth="200"/>
                        <TableColumn text="Trưởng phòng" prefWidth="180"/>
                        <TableColumn text="Số nhân viên" prefWidth="120"/>
                        <TableColumn text="Thao tác" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>

    </VBox>
</ScrollPane> 