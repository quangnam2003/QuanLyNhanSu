<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.DocumentController"
            fitToWidth="true"
            fitToHeight="true"
            stylesheets="@sidebar.css">

    <VBox styleClass="page-container" spacing="20">

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Quản lý Tài liệu" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddDocument"
                    onAction="#handleAddDocument"
                    text="+ Thêm tài liệu"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"
                    onMouseEntered="#onHoverAdd"
                    onMouseExited="#onExitAdd"/>
        </HBox>

        <!-- Search and Filter -->
        <VBox spacing="10">
            <!-- Dòng 1: Tìm kiếm và Danh mục -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Tìm kiếm tài liệu..."
                           prefWidth="300"
                           style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
                <ComboBox fx:id="categoryFilter" promptText="Danh mục"
                          prefWidth="150"
                          style="-fx-padding: 10;"/>
            </HBox>
            
            <!-- Dòng 2: Lọc theo thời gian -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Lọc theo thời gian:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label text="Từ ngày:" style="-fx-font-size: 12px;"/>
                <DatePicker fx:id="fromDatePicker" promptText="Chọn ngày bắt đầu" 
                           prefWidth="150"
                           style="-fx-padding: 8;"/>
                <Label text="Đến ngày:" style="-fx-font-size: 12px;"/>
                <DatePicker fx:id="toDatePicker" promptText="Chọn ngày kết thúc"
                           prefWidth="150" 
                           style="-fx-padding: 8;"/>
                <Button fx:id="clearDateFilterBtn" text="Xóa lọc" 
                        onAction="#clearDateFilter"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 12; -fx-background-radius: 5; -fx-cursor: hand;"/>
            </HBox>
        </VBox>

        <!-- Documents Table -->
        <TableView fx:id="documentTable" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80" visible="false"/>
                <TableColumn fx:id="colTitle" text="Tiêu đề" prefWidth="250" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colFileName" text="Tên file" prefWidth="200"/>
                <TableColumn fx:id="colFileSize" text="Kích thước" prefWidth="100" visible="false"/>
                <TableColumn fx:id="colCategory" text="Danh mục" prefWidth="150" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="colLastUpdated" text="Cập nhật cuối" prefWidth="180" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="actionColumn" text="Hành động" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Overview với layout 2 cột -->
        <HBox spacing="30" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 8;">
            
            <!-- Left Column - Tổng quan (căn giữa) -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
                <Label text="Tổng quan:" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-alignment: center;"/>
                <HBox spacing="30" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="5">
                        <Label fx:id="lblTotal" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                        <Label text="Tổng tài liệu" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Right Column - Quy định upload file (đơn giản gọn) -->
            <VBox spacing="8" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 12; -fx-background-radius: 8; -fx-border-color: #e9ecef; -fx-border-radius: 8;">
                <Label text="📎 Lưu ý upload file:" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #495057;"/>
                
                <!-- Nội dung gọn trong 2 dòng -->
                <VBox spacing="4">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="✅ Loại file:" style="-fx-font-size: 11px; -fx-text-fill: #28a745; -fx-font-weight: bold;"/>
                        <Label text="📄 PDF" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                        <Label text="📝 TXT" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                        <Label text="📘 DOC" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                        <Label text="📊 XLS" style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="⚠️ Giới hạn:" style="-fx-font-size: 11px; -fx-text-fill: #dc3545; -fx-font-weight: bold;"/>
                        <Label text="📏 Tối đa 700KB" style="-fx-font-size: 11px; -fx-text-fill: #dc3545;"/>
                    </HBox>
                </VBox>
            </VBox>
            
        </HBox>

        <!-- Document Categories Info -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 12, 0, 0, 2);">
            <Label text="📁 Danh mục tài liệu" style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>
            <HBox spacing="50">
                <VBox spacing="10">
                    <Label text="📜 Policy" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label text="Quy định và chính sách công ty" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
                <VBox spacing="10">
                    <Label text="👥 HR" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label text="Tài liệu quản lý nhân sự" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
                <VBox spacing="10">
                    <Label text="💰 Finance" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label text="Báo cáo tài chính và kế toán" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
                <VBox spacing="10">
                    <Label text="🎓 Training" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label text="Tài liệu đào tạo và hướng dẫn" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
                <VBox spacing="10">
                    <Label text="📄 General" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Label text="Tài liệu chung khác" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
            </HBox>

        </VBox>

    </VBox>
</ScrollPane>